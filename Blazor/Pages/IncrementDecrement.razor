@page "/IncrementerDecrementer"

<PageTitle>IncrementerDecrementer</PageTitle>

<h1>IncrementerDecrementer</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-warning" @onclick="IncrementCount">Increment</button>

 

<hr size="10">

<p role="status">Current count: @currentCount</p>

<button class="btn btn-danger" @onclick="DecrementCount">Decrease</button>

@code {

    private void IncrementCount()
    {
        currentCount++;
    }

    private decimal currentCount = 0;

    private void DecrementCount()
    {
        currentCount--;
    }
}
